{
  "name": "Mzapeka/ImgLoader",
    "type": "library",
  "description": "Simple loader of images from remoute hosts",
    "keywords": [
      "Mzapeka",
      "ImgLoader"
    ],
  "homepage": "https://github.com/Mzapeka/ImgLoader",
    "license": "MIT",
    "authors": [
        {
          "name": "Mykola Zapeka",
          "email": "mzapeka@gmail.com",
          "homepage": "https://github.com/Mzapeka",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
          "Mzapeka\\ImgLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Mzapeka\\ImgLoader\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
